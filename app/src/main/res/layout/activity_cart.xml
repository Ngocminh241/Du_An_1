<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Cart_Activity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"

        android:elevation="10dp"
        android:background="@drawable/bg_function">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="70sp"
            android:background="@color/menuDriver">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/check"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/ops"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btnGioHang"
                android:layout_width="137sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@color/menuDriver">
                <TextView
                    android:id="@+id/tvGioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/cart"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ops"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnDangDen"
                android:layout_width="137sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvDangDen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/check_coming"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/ops"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnLichSu"
                android:layout_width="137sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvLichSu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/history"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/ops"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="360sp"
        android:layout_height="550dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@color/white"
        android:elevation="7sp">

        <LinearLayout
            android:id="@+id/cartContainer"
            android:layout_width="360sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnThanhToan"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:text="THANH TOÁN"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/ops"
        android:background="@drawable/bg_box_rounded_red"
        android:layout_marginTop="10sp"
        app:backgroundTint="#EB8237"
        android:elevation="10sp"/>
    <Button
        android:id="@+id/btnTrolai"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:text="TRỞ VỀ"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="10sp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/ops"
        android:background="@drawable/bg_box_rounded_red"
        app:backgroundTint="#EB8237"
        android:textColor="@color/white"
        android:elevation="10sp"/>

</LinearLayout>