<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.QuanLyHoaDonFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:elevation="10dp"
        android:background="@drawable/bg_function">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnDangDen"
                android:layout_width="206sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/menuDriver"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvDangDen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/check_coming"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ops"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnLichSu"
                android:layout_width="206sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvLichSu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/history"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/ops"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="360sp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:elevation="7sp">

        <LinearLayout
            android:id="@+id/cartContainer"
            android:layout_width="360sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

</LinearLayout>