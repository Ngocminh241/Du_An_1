<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EB8237"

    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Login">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/anh_spl"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lakkireddy"
        android:gravity="center_horizontal"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_4"
        android:padding="20dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ed_username_input_login"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_input_text"
            android:drawableStart="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:hint="Username"
            android:paddingStart="10dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/ed_password_input_login"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_input_text"
            android:drawableStart="@drawable/icon_password"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/chkRememberPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="Remember Pass"
            android:textColor="#EB8237"
            android:textSize="14sp" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_login"
            android:layout_gravity="center_horizontal"
            android:text="LOGIN"
            android:textSize="20sp"
            app:backgroundTint="@null"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do not have an account?"
                android:textColor="#B91C1C"/>
            <TextView
                android:id="@+id/tv_create_new_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="Create a new account!"
                android:textColor="#2124B3"/>
        </LinearLayout>
    </LinearLayout>





</LinearLayout>